rest internal-auth {
        connect_uri = "http://127.0.0.1:8000"

        authorize {
                uri = "${..connect_uri}/api/authentication/%{Internal-Auth-ID}/user/authorize/%{User-Name}"
                method = "get"
        }
        pool {
                start = 0
                min = 4
                max = 10
                spare = 4
                uses = 0
                lifetime = 0
                idle_timeout = 0
        }
}

