rest cc-auth {
        connect_uri = "http://127.0.0.1:8000"

        authorize {
                uri = "<%text>$</%text>{..connect_uri}/api/authentication/%{%{session-state:Origin-Auth-Provider}:-%{Origin-Auth-Provider}}/user/authorize/%{User-Name}?source=%{Origin-Auth-Type}"
                method = "get"
        }
        pool {
                start = 0
                min = 4
                max = 10
                spare = 4
                uses = 0
                lifetime = 0
                idle_timeout = 0
        }
}

