server {

    listen 127.0.0.1:8000;
    server_name synapse;

    # no need for logs
    access_log off;

    location / {
        proxy_pass http://controlcenter;
    }
}

proxy_redirect          off;
% if uuid:
proxy_set_header	Authorization	"Token ${uuid}";
% endif
proxy_hide_header       X-Powered-By;
proxy_cache off;
proxy_intercept_errors off;
proxy_buffering off;

# following lines enable keep alive proxy between reverse proxy and control center and allow websocket proxying
map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}
proxy_http_version 1.1;
proxy_set_header Upgrade $http_upgrade;
proxy_set_header Connection $connection_upgrade;
proxy_read_timeout 7200;


upstream controlcenter {
	server 192.168.0.6:8000;
	keepalive 3;
}
