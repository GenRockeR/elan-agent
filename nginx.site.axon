server {

    listen 127.0.0.1:8000;
    server_name synapse;

    # no need for logs
    access_log off;

    location / {
        proxy_pass https://controlcenter;
        proxy_ssl_trusted_certificate /origin/core/control-center-ca.crt;
        proxy_ssl_verify_depth 5;
        proxy_ssl_name control-center.origin-nexus.com;
        proxy_ssl_verify on;
    }
}

proxy_redirect          off;
% if uuid:
proxy_set_header	Authorization	"Token ${uuid}";
% endif
proxy_hide_header       X-Powered-By;
proxy_cache off;
proxy_intercept_errors off;
proxy_buffering off;

# following lines enable keep alive proxy between reverse proxy and control center and allow websocket proxying
map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}
proxy_http_version 1.1;
proxy_set_header Upgrade $http_upgrade;
proxy_set_header Connection $connection_upgrade;
proxy_read_timeout 7200;


upstream controlcenter {
	server control-center.origin-nexus.com:443;
	server 87.98.150.15:443 backup;
	server [2001:41d0:2:ba47::1:10]:443 backup;
	keepalive 3;
}
