#!/usr/bin/make -f
export DH_VERBOSE=1


override_dh_installinit:
	dh_installinit --name=authentication_provider
	dh_installinit --name=freeradius
	dh_installinit --name=captive-portal
	dh_installinit --name=captive-portal_configuration_cacher
	dh_installinit --name=guest-access-manager
	dh_installinit --name=connection-trackerd
	dh_installinit --name=device-trackerd
	dh_installinit --name=session-trackerd
	dh_installinit --name=axon
	dh_installinit --name=nginx
	dh_installinit --name=redis
	dh_installinit --name=suricata
	dh_installinit --name=ids-logger
	dh_installinit --name=ids-monitor
	dh_installinit --name=nac-network
	dh_installinit --name=nac_configurator
	dh_installinit --name=mac_authz_manager
	dh_installinit --name=snmp_notification_receiver
	dh_installinit --name=snmp_poller
	dh_installinit --name=snmptrapd
	dh_installinit --name=suricata
	dh_installinit --name=access-control
	dh_installinit --name=nac-network

override_dh_systemd_enable:
	dh_systemd_enable --name=authentication_provider
	dh_systemd_enable --name=freeradius
	dh_systemd_enable --name=captive-portal
	dh_systemd_enable --name=captive-portal_configuration_cacher
	dh_systemd_enable --name=guest-access-manager
	dh_systemd_enable --name=connection-trackerd
	dh_systemd_enable --name=device-trackerd
	dh_systemd_enable --name=session-trackerd
	dh_systemd_enable --name=axon
	dh_systemd_enable --name=nginx
	dh_systemd_enable --name=redis
	dh_systemd_enable --name=suricata
	dh_systemd_enable --name=ids-logger
	dh_systemd_enable --name=ids-monitor
	dh_systemd_enable --name=nac-network
	dh_systemd_enable --name=nac_configurator
	dh_systemd_enable --name=mac_authz_manager
	dh_systemd_enable --name=snmp_notification_receiver
	dh_systemd_enable --name=snmp_poller
	dh_systemd_enable --name=snmptrapd
	dh_systemd_enable --name=suricata
	dh_systemd_enable --name=access-control
	dh_systemd_enable --name=nac-network
%:
	dh $@ --with systemd
