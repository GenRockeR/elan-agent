#!/usr/bin/make -f
export DH_VERBOSE=1


override_dh_systemd_start:
	dh_systemd_start --restart-after-upgrade

override_dh_systemd_enable:
	dh_systemd_enable --name=access-control-configurator
	dh_systemd_enable --name=authentication-provider
	dh_systemd_enable --name=axon
	dh_systemd_enable --name=axon-websocket-proxy
	dh_systemd_enable --name=captive-portal
	dh_systemd_enable --name=captive-portal-configuration-cacher
	dh_systemd_enable --name=connection-trackerd
	dh_systemd_enable --name=device-trackerd
	dh_systemd_enable --name=guest-access-manager
	dh_systemd_enable --name=ids-logger
	dh_systemd_enable --name=ids-monitor
	dh_systemd_enable --name=mac-authz-manager
	dh_systemd_enable --name=nac-network
	dh_systemd_enable --name=nac-configurator
	dh_systemd_enable --name=redirector
	dh_systemd_enable --name=rest-elan-proxy
	dh_systemd_enable --name=session-trackerd
	dh_systemd_enable --name=snmp-notification-receiver
	dh_systemd_enable --name=snmp-poller
	dh_systemd_enable --name=snmptrapd
	dh_systemd_enable --name=suricata
%:
	dh $@ --with systemd
