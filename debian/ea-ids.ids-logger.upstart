description "IDS logger to Central Manager"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

env PYTHONPATH=/origin/lib/python

exec /origin/bin/ids-loggerd

pre-start script
    if [ ! -e /var/log/suricata ]
    then
        mkdir /var/log/suricata
    fi
end script
