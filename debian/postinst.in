#!/bin/sh
# get rid of rc.d symlinks for freeradius
update-rc.d -f freeradius remove
rm -f /etc/init.d/freeradius
ln -s /lib/init/upstart-job /etc/init.d/freeradius
  

# create default params
/etc/freeradius/certs/bootstrap


# Configure Nginx
rm -f /etc/nginx/sites-enabled/default

# deconfigure freeradius default sites
rm -f /etc/freeradius/sites-enabled/default
rm -f /etc/freeradius/sites-enabled/inner-tunnel

mkdir -p /var/log/freeradius/tlscache
chown freerad: /var/log/freeradius/tlscache


mkdir -p /var/log/suricata
mkdir -p /etc/suricata/rules
PYTHONPATH=/elan-agent/lib/python /elan-agent/bin/rule-fetcher --no-rule-reload || true

perl -p -i -e 's:SECRET_KEY_TO_BE_REPLACED:'`date +%s | sha256sum | base64 | head -c 64`':'  %{ORIGIN_PREFIX}/captive-portal/captive_portal/settings.py

# get rid of rc.d symlinks for nginx and redis
update-rc.d -f nginx remove
update-rc.d -f redis-server remove

cat /elan-agent/authentication/smb.conf > /etc/samba/smb.conf

# deconfigure default site
rm -f /etc/nginx/sites-enabled/default

# Create certs
mkdir -p /elan-agent/network/certs/
for domain in elan-agent.origin-nexus.com captive-portal.origin-nexus.com
do
  if [ ! -e /elan-agent/network/certs/$domain.crt ]
  then 
    openssl req  -x509 -newkey rsa:2048 -keyout /elan-agent/network/certs/$domain.key -out /elan-agent/network/certs/$domain.crt -nodes -subj /CN=$domain
  fi
done

# remove default FW that blocks all incoming...
update-rc.d -f nftables remove

# disable all interfaces
ifdown -a --ignore-errors --exclude=lo
cat /elan-agent/network/interface.lo > /etc/network/interfaces
chown www-data /etc/network/interfaces.d/elan-network


if ! grep -q 'SASL_NOCANON on' /etc/ldap/ldap.conf
then
    echo 'SASL_NOCANON on' >> /etc/ldap/ldap.conf
fi

mkdir -p /usr/local/pf/lib/pf/util
ln -fs %{ORIGIN_PREFIX}/nac/pf/conf /usr/local/pf/
ln -fs %{ORIGIN_PREFIX}/nac/pf/conf/dictionary /usr/local/pf/lib/pf/util/


#DEBHELPER#

exit 0


