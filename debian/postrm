case "$1" in
remove|abort-install|disappear)
	if dpkg-divert --list "lc-ids" | grep -F "/etc/suricata/suricata.yaml.diverted-lc-ids"
	then
        	dpkg-divert --package "lc-ids" --remove --rename \
                --divert "/etc/suricata/suricata.yaml.diverted-lc-ids " "/etc/suricata/suricata.yaml"
	fi;;
esac
