rest elan {
        connect_uri = "http://127.0.0.1:8080/"
        
        authorize {
                uri = "${..connect_uri}%{control:Elan-Path}"
                method = 'post'
                data = 'json'
                
        }
        authenticate {
                uri = "${..connect_uri}%{control:Elan-Path}"
                method = 'post'
                data = 'json'
                
        }
        preacct {
                uri = "${..connect_uri}%{control:Elan-Path}"
                method = 'post'
                data = 'json'
                
        }
        accounting {
                uri = "${..connect_uri}%{control:Elan-Path}"
                method = 'post'
                data = 'json'
                
        }
        pre_proxy {
                uri = "${..connect_uri}%{control:Elan-Path}"
                method = 'post'
                data = 'json'
                
        }
        post_proxy {
                uri = "${..connect_uri}%{control:Elan-Path}"
                method = 'post'
                data = 'json'
                
        }
        post_auth {
                uri = "${..connect_uri}%{control:Elan-Path}"
                method = 'post'
                data = 'json'
                
        }
        
		pool {
			start = 0
			min = ${thread[pool].min_spare_servers}
			max = ${thread[pool].max_servers}
			spare = ${thread[pool].max_spare_servers}
			uses = 0
			retry_delay = 30
			lifetime = 0
			idle_timeout = 0
		}
}