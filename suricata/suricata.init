description	"Suricata server"

start on (filesystem and net-device-up IFACE=br0)
stop on stopping ids-logger

respawn
respawn limit 10 5
umask 022

exec /usr/bin/suricata --af-packet

pre-start script
    mkdir -p /var/log/suricata
    mkdir -p /etc/suricata/rules
    PYTHONPATH=/origin/lib/python /origin/sbin/rule-fetcher --no-rule-reload || echo -n
end script
