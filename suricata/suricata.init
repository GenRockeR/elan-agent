description	"Suricata server"

start on started ids-logger
stop on stopping ids-logger

respawn
respawn limit 10 5
umask 022

exec /usr/bin/suricata --af-packet

pre-start script
    mkdir -p /var/log/suricata
    mkdir -p /etc/suricata/rules
    PYTHONPATH=/opt/origin/lib/python /opt/origin/sbin/rule-fetcher --no-rule-reload
end script
