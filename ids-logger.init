description "IDS logger to Central Manager"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

env PYTHONPATH=/opt/origin/lib/python

exec /opt/origin/sbin/ids-loggerd

pre-start script
    if [ ! -e /var/run/suricata.alerts ]
    then
        mkfifo /var/run/suricata.alerts
    fi
end script
