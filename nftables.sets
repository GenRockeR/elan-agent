#!/usr/sbin/nft -f

table bridge origin {
  set dhcp_pt_ifs {
    type iface_index . iface_index ;
  }
  set dns_pt_ifs {
    type iface_index . iface_index ;
  }
  set ac_ifs {
    type iface_index ;
  }
  set log_ifs {
    type iface_index ;
  }
  set mac_on_vlan {
    type ether_addr . iface_index ;
  }
  set mac_to_vlan {
    type ether_addr . iface_index ;
  }
  
  map vlan_mark {
    type iface_index : mark ;
  }
}

table ip origin {
  map captive_portals {
    type mark . inet_service : inet_service ;
  }
}

table ip6 origin {
  map captive_portals {
    type mark . inet_service : inet_service ;
  }
}

table inet origin {
}